<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentColorPreview">

    <TableLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableLayout
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:paddingLeft="20dp"
                        android:text="R"></TextView>

                    <SeekBar
                        android:id="@+id/settings_seekBarR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:progress="33" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:paddingLeft="20dp"
                        android:text="G"></TextView>

                    <SeekBar
                        android:id="@+id/settings_seekBarG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:progress="75" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingLeft="20dp"
                        android:text="B">B</TextView>

                    <SeekBar
                        android:id="@+id/settings_seekBarB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:progress="50" />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_weight="5"
                android:id="@+id/color_display"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/purple_200"
                android:text="" />
        </TableRow>
    </TableLayout>

</FrameLayout>